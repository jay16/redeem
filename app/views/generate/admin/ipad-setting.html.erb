<section class="content">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <form class='form-horizontal' action="/api/v1/ipad/setting" method="post" id="ajaxform">
          <table class="table table-striped table-condensed table-hover" width="100%">
            <tbody>
              <tr>
                <th width="35%">名称</th>
                <th>参数</th></tr>
              <tr>
                <td>设置此次问卷名称：</td>
                <td>
                  <input type='hidden' name='keyname' value='ipad-selected-questionnaire'>
                  <select class='form-control' name="questionnaire_code">
                      <option value="">请选择</option>
                  </select>
              </tr>
              <tr>
                <td colspan="2" class="left">
                  <input type="submit" class="btn btn-success btn-xm" id="Search" value="保存/修改"></td>
              </tr>
            </tbody>
          </table>
        </form>
      </div>
    </div>
  </div>
</section>

<script type='text/javascript'>
window.ServerAPI.generate_questionnaire_options();

var frm = $('#ajaxform');
frm.submit(function () {
  $.ajax({
      type: frm.attr('method'),
      url: frm.attr('action'),
      data: frm.serialize(),
      cache: false,
      dataType: 'json',
      beforeSend: function() {
          $(".validator-error").remove();
          $(".has-error").removeClass("has-error");
      },
      success: function(data) {
         layer.msg(data.info,{icon:1,time:2000});
      },
      error: function(xhr, textStatus, thrownError) {
         layer.msg('Something went to wrong.Please Try again later...',{time: 2000});
      }
  });
  return false;
});
</script>
