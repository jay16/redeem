<style>
.col-lg-12{ margin-bottom: 20px;}
.col-lg-12 .input-1{width: 15%; display: inline;}
</style>
<section class="content">
  <div class="row">
    <div class="col-lg-12">
      <form id="searchForm" action="signature.html" method="get">
        <input type="text" name="member" value="" placeholder="会员名称" class="form-control input-1">
        <input type="text" name="telphone" value="" placeholder="会员手机号" class="form-control input-1">
        <input type="text" name="questionnaire_name" value="" placeholder="问卷名称" class="form-control input-1">
        <input type="submit" id="addSysem" class="btn btn-success btn-xm" value="搜索" /></form>
    </div>
    <div class="col-lg-12">
      <div class="panel panel-default">
        <table id="tableRecords" class="table table-striped table-condensed table-hover" width="100%"></table>
      </div>
    </div>
  </div>
</section>
<script type="text/javascript">
$(document).ready(function() {
  var oTable = $('#tableRecords').DataTable({
    //bFilter: false,
    "columnDefs": [{
      "title": "ID",
      "targets": 0,
      "orderable": true,
      "searchable": false
    },
    {
      "title": "会员名称",
      "targets": 1,
      "orderable": true,
      "searchable": true
    },
    {
      "title": "手机号",
      "targets": 2,
      "orderable": true,
      "searchable": true
    },
    {
      "title": "问卷名称",
      "targets": 3,
      "orderable": true,
      "searchable": true
    },
    {
      "title": "问卷ID",
      "targets": 4,
      "orderable": false,
      "searchable": false
    },
    {
      "title": "添加时间",
      "targets": 5,
      "orderable": false,
      "searchable": false
    },
    {
      "title": "操作",
      "targets": 6,
      "orderable": false,
      "searchable": false
    }
    ],
    "stateSave": true,
    "order": [[0, "desc"]],
    "serverSide": false,
    //true代表后台处理分页，false代表前台处理分页
    "iDisplayLength": 20,
    // 每页显示多少条
    "iDisplayStart": 0,
    "ajax": {
      "url": window.ServerAPI.server + "/api/v1/list/signature",
      "data": function(params) {
        var query = window.ServerAPI.params();
        if(query["member"]) {
          params["member"] = query["member"];
          $("input[name=member]").val(query["member"]);
        }
        if(query["telphone"]) {
          params["telphone"] = query["telphone"];
          $("input[name=telphone]").val(query["telphone"]);
        }
        if(query["questionnaire_name"]) {
          params["questionnaire_name"] = query["questionnaire_name"];
          $("input[name=questionnaire_name]").val(query["questionnaire_name"]);
        }
        return params;
      }
    },
    "drawCallback": function(settings) {
      $("#tableRecords_filter").hide();
      $(".iframe").off('click').on('click',
      function(event) {
        event.preventDefault();
        var url = $(this).attr('href');
        var type = BootstrapDialog.TYPE_PRIMARY;
        if ($(this).attr('title') == '编辑') type = BootstrapDialog.TYPE_PRIMARY;
        if ($(this).attr('title') == '删除') type = BootstrapDialog.TYPE_DANGER;
        BootstrapDialog.show({
          title: $(this).attr('title') + '店铺管理',
          message: $('<div></div>').load(url),
          type: type,
        });
      });
    }
  });
});
</script>
<script src="/javascripts/modernizr.js"></script>
<script src="/javascripts/jSignature.js"></script>
<script src="/javascripts/jSignature.CompressorBase30.js"></script>
<script src="/javascripts/jSignature.CompressorSVG.js"></script>
<script src="/javascripts/plugins/signhere/jSignature.SignHere.js"></script>
