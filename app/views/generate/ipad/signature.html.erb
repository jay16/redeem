
<style>
  .disabled { pointer-events: none; background-color: gainsboro !important; }
  .layui-layer-btn a { font-size: 12px; }
  .anNiu a{width:30%;}
  .ptt1{color:#fff;font-size:0.5rem;text-align:center;padding-bottom:10px;}
  #signatureparent{color:#000;padding-bottom:10px;}
  #signature{margin:0px auto;background:#fff;color:#000;}
  #jSignature{height:300px;width:70%;}
  #main{display:block;visibility:hidden;}
</style>

  <div id="main" style="height: 100%;">
    <div class="title">
      <div>
        <img src="/images/dhlp2.png?timestamp=<%= timestamp %>">礼品兑换 -
        <img src="/images/bi.png?timestamp=<%= timestamp %>" style="width:0.2rem;padding-right:5px;opacity:0.8">签名完成兑换</div>
      <div>
        Gift Redemption - Sign off
      </div>
      </div>
    <div class="content">
      <div id="signatureparent">
        <p class="ptt1">请在此签字，完成兑换</p>
        <div id="signature"></div>
      </div>
    </div>
    <div class="anNiu">
      <a href="javascript:void(0);" class="qxDuiHuan clearsign">
        <img src="/images/duiHuan.png?timestamp=<%= timestamp %>">清除
        <br/>clear
      </a>
      <a href="javascript:void(0)" onClick="window.TKH.signatureDone();" class="duiHuan">
        完成兑换<br/>Done
      </a>
    </div>
  </div>

  <div class="gn">
    <div class="dj">
      <div>
        <img src="/images/gn1.png?timestamp=<%= timestamp %>" class="xs" alt="">
        <img src="/images/gn2.png?timestamp=<%= timestamp %>" class="yc" alt="">
      </div>
      <div style="display:none;">
        <img src="/images/gn2.png?timestamp=<%= timestamp %>">
      </div>
    </div>
    <div class="nr">
      <div>礼品兑换系统</div>
      <p class="lp">
        <a href="search.html">
          <img src="/images/dhlp.png?timestamp=<%= timestamp %>">礼品兑换</a></p>
      <p class="mm">
        <img src="/images/bi.png?timestamp=<%= timestamp %>" class="bi" alt="">修改密码</p>
      <p class="tuichu" onclick="window.TKH.logout();">
        <img src="/images/dl2.png?timestamp=<%= timestamp %>">退出登录</p>
      <div class="renWu">
        <img src="/images/renWu.png?timestamp=<%= timestamp %>">
        <p id="userGid"></p>
        <p class="time"></p>
      </div>
    </div>
  </div>
  <div class="xg">
    <div>
      <a href="javascript:void(0);" class="gb">
        <img src="/images/gb.png?timestamp=<%= timestamp %>"></a>
      <div class="xg_content">
        <div class="suo">
          <img src="/images/bi.png?timestamp=<%= timestamp %>"></div>
        <div class="xg_info">
          <p class="title">修改密码</p>
          <input type="password" id="oldPassword" placeholder="旧密码" />
          <input type="password" id="newPassword" placeholder="新密码" />
          <input type="password" id="rePassword" placeholder="再次输入新密码" />
          <a onclick='window.ServerAPI.resetPassword();' href="javascript:void(0);" class="cs mima">确认修改密码</a>
        </div>
      </div>
    </div>
  </div>

